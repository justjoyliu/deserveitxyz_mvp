<% provide(:title, "DeserveIt.XYZ Log in") %>
<div class='top_container'>
	<h1 class='margin_bottom_20'>Welcome back</h1>

	<div class="row"><div class="col-md-6 col-md-offset-3">
	    <%= form_for(:session, url: login_path) do |f| %>
	      <%= f.email_field :email, class: 'form-field text_center', :placeholder => "Email" %>
	      <%= f.password_field :password, class: 'form-field text_center', :placeholder => "Password" %>

	      <%= f.submit "Log in", class: "btn_large btn_100p margin_top_10" %>
	    <% end %>

	    <div class='margin_top_20'><a href="/#get_started">New user? Sign up now!</a></div>
	</div></div>
</div>