<% provide(:title, "Set Goal") %>

  <div class='row background_light_blue container_center'>
  	<div class = 'padding_top_container margin_bottom_20 col-xs-10 col-xs-offset-1'>
  		<h2>Did you <%= @goal_question.downcase %> <%= @time_reminder.to_s %>?</h2>
  		<% if !@active_goal.long_description.nil? %><div class='margin_bottom_20 font_16 padding_lr'><%= @active_goal.long_description %></div><% end %>
  	</div>

    <div class='checkin_form'>
        <%= link_to record_checkin_path(1), method: "post" do %>
            <button class='btn_yes btn_50p'>Yes</button>
        <% end %>
        <%= link_to record_checkin_path(2), method: "post" do %>
            <button class='btn_no btn_50p'>No</button>
        <% end %>
    </div>
    
    <div class='reward_img_container'>
    	<%= link_to image_tag(@active_goal.reward_img, size: '160x160'), @active_goal.reward_link %>
    </div>
  </div>
